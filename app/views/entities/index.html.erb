<p id="notice"><%= notice %></p>

<h1>Entités</h1>

<div class="fr-table">
    <table>
    <thead>
        <tr>
        <th>Administration</th>
        <th>Service</th>
        <th>Departement</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @entities.each do |entity| %>
        <tr>
            <td><%= entity.name %></td>
            <td><%= entity.service %></td>
            <td><%= entity.departement %></td>
            <td><%= link_to 'Voir', entity %></td>
            <td><%= link_to 'Editer', edit_entity_path(entity) %></td>
            <td><%= link_to 'Supprimer', entity, method: :delete, data: { confirm: 'Etes vous certain de vouloir supprimer cette entité ?' } %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>
<br>

<%= link_to 'Créer une entité', new_entity_path %>
