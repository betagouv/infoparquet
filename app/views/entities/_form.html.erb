<%= form_with(model: entity) do |form| %>
  <% if entity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entity.errors.count, "error") %> prohibited this entity from being saved:</h2>

      <ul>
        <% entity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Nom de l'entité", class: "fr-label" %>
    <%= form.text_field :name, class: "fr-input" %>
  </div>

  <div class="field">
    <%= form.label :service, "Service / Direction", class: "fr-label" %>
    <%= form.text_field :service, class: "fr-input" %>
  </div>

  <div class="field">
    <%= form.label :departement, "Département", class: "fr-label" %>
    <%= form.select :departement, @departements, {}, { :class => "fr-select"} %>
  </div>

  <div class="actions">
    <%= form.submit "Créer l'entité", class: "fr-btn" %>
  </div>
<% end %>
