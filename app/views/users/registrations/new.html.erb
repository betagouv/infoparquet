<h2>Créer un compte</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "E-mail", class: "fr-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fr-input" %>
  </div>

  <div class="field">
    <%= f.label :prenom, "Prénom", class: "fr-label" %><br />
    <%= f.text_field :prenom, autofocus: true, autocomplete: "name", class: "fr-input" %>
  </div>

  <div class="field">
    <%= f.label :nom, "Nom", class: "fr-label" %><br />
    <%= f.text_field :nom, autofocus: true, autocomplete: "surname", class: "fr-input" %>
  </div>

  <div class="field">
    <%= f.label :password, "Mot de passe", class: "fr-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "fr-input" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "fr-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "fr-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Créer le compte", class: "fr-btn"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
