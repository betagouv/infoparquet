<h2>Se connecter</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "E-mail", class: "fr-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fr-input" %>
  </div>

  <div class="field">
    <%= f.label :password, "Mot de passe", class: "fr-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "fr-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Se souvenir de moi" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Se connecter", class: "fr-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
